{
  "useTabs": false,
  "tabWidth": 2,
  "bracketSpacing": true,
  "semi": true,
  "jsxBracketSameLine": false,
  "printWidth": 120,
  "arrowParens": "avoid",
  "trailingComma": "none",

  "importOrder": [
    "<THIRD_PARTY_MODULES>",

    "^~/components(.*)$",
    "^contexts(.*)$",
    "^hooks(.*)$",
    "^utils(.*)$",
    "^constants(.*)$",
    "^formblocks(.*)$",
    "^components(.*)$",
    "^atoms(.*)$",
    "^molecules(.*)$",
    "^organisms(.*)$",
    "^templates(.*)$",
    "^icons/(.*)$",

    "^[./]"
  ],

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
